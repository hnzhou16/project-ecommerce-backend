{
  "name": "project-ecommerce",
  "version": "0.0.1",
  "description": "Ecommerce project by HZ.",
  "type": "module",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^16.11.10",
    "@types/node-webcam": "^0.8.3",
    "@types/nodemailer": "^6.4.17",
    "@types/paypal-rest-sdk": "^1.7.9",
    "prettier": "^3.3.3",
    "typescript": "5.7.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "dotenv-flow": "^4.1.0",
    "express": "^4.19.2",
    "express-fileupload": "^1.5.0",
    "helmet": "^7.1.0",
    "husky": "^9.1.4",
    "json-web-token": "^3.2.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "nodemailer": "^6.9.16",
    "paypal-rest-sdk": "^1.8.1",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typeorm": "0.3.20"
  },
  "scripts": {
    "dev:start": "cross-env NODE_ENV=development  tsx watch ./src/index.ts",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "build": "cross-env NODE_ENV=production tsc",
    "start": "cross-env NODE_ENV=production node ./build/index.js",
    "---Migration---": "typeorm migration:generate -n",
    "dev:schema:sync": "cross-env NODE_ENV=development ts-node ./node_modules/typeorm/cli.js schema:sync -d src/InitDataSource.ts",
    "dev:schema:drop": "cross-env NODE_ENV=development ts-node ./node_modules/typeorm/cli.js schema:drop -d src/InitDataSource.ts",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "prettier:check": "prettier --check \"src/**/*.ts\""
  }
}
